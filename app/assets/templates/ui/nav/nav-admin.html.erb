<md-toolbar id="app-navigation" ng-controller="NavCtrl" class="md-whiteframe-z2  md-hue-1">
  <div class="md-toolbar-tools">
    <span>WooLab</span>
    <!-- fill up the space between left and right area -->
    <span flex></span>
    
    <dropdown-button data-activates="language_dropdown" data-beloworigin="true">
      <i class="md md-language nav-icon"></i>
    </dropdown-button>
    <ul id="language_dropdown" class="dropdown-content md-whiteframe-z2">
      <li>
        <a value="fr-FR" ng-click="changeLanguage('fr-FR')" >
          <img class="flag_img" ng-src="<%= asset_path 'fr-FR.svg' %>" />
          <span class="flag_label" translate>{{ 'ui.languages.french' }}</span>
        </a>
      </li>
      <li>
        <a value="en-US" ng-click="changeLanguage('en-US')" >
          <img class="flag_img" ng-src="<%= asset_path 'en-US.svg' %>" />
          <span class="flag_label" translate>{{ 'ui.languages.english' }}</span>
        </a>
      </li>
    </ul>

    <dropdown-button data-activates="account_dropdown" data-beloworigin="true">
      <i class="md md-account-circle nav-icon"></i>
    </dropdown-button>
    <ul id="account_dropdown" class="dropdown-content md-whiteframe-z2">
      <li><a ng-click="openProfilePanel()" ><i class="md-account-child md-lg"></i><span translate>{{ 'auth.edit_profile_link' }}</span></a></li>
      <li><a ng-click="logout()"><i class="md-exit-to-app md-lg"></i><span translate>{{ 'auth.logout_link' }}</span></a></li>
    </ul>
  </div>
</md-toolbar>

